{% extends 'base.html.twig' %}

{% block title %} Toutes les recettes {% endblock %}
{% block body %}
    <a class="btn btn-primary" href="{{ url('recipe.create') }}"> Cr√©er une recette</a>
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Acions</th>
            </tr>
        </thead>
        <tbody>
            {% for recipe in recipes %}
                <tr>
                    <td>
                        <a href="{{ url('recipe.show', 
                        {id: recipe.id, slug: recipe.slug}) }}">
                            {{ recipe.getTitle() }}
                        </a>
                    </td>
                    <td>
                        <div class="d-flex gap-1">
                            <a class="btn btn-primary btn-sm" 
                            href="{{ url('recipe.edit', 
                            {id: recipe.id}) }}">
                                Editer
                            </a>
                            <form action="{{ path('recipe.delete',  {id: recipe.id}) }}" method="post">
                                <input type="hidden" name="_method" value="DELETE"> 
                                <button type="submit" class="btn btn-danger btn-sm ">Delete</button
                            </form>
                        </div>
                    </td>
                </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
