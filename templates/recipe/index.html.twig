{% extends 'base.html.twig' %}

{% block title %} Toutes les recettes {% endblock %}
{% block body %}
    <ul>
        {% for recipe in recipes %}
            <li>
                <a href="{{ url('recipe.show', {id: recipe.id, slug: recipe.slug}) }}">{{ recipe.getTitle() }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
